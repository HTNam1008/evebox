generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_AI")
}

model Content {
  id      Int      @id @default(autoincrement())
  context String
  message String?

  rootId Int?
  Root   Content?   @relation("ParentChild", fields: [rootId], references: [id])
  Child  Content[]  @relation("ParentChild")
}
